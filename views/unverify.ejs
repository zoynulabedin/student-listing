<div class="container mt-5">
	<div class="row mt-3 justify-content-center">
		<div class="col-md-10">
			<div
				class="header d-flex justify-content-between align-items-center p-3 mb-3"
			>
				<div class="header-left">
					<a class="btn btn-primary" href="/student/create"
						><i class="fas fa-database"></i>Back To Add New Student</a
					>
				</div>
				<div class="header-right">
					<h3 class="text-white">Verify your account</h3>
				</div>
			</div>
			<div class="row mb-5">
				<!-- item -->
				<% students.forEach(student => { %>
				<div class="col-md-4 poss">
					<div class="card shadow p-3 disable-div">
						<div class="un d-flex justify-content-between">
							<div class="unverify">
								<i class="fas fa-exclamation-circle"></i>
							</div>
							<div class="status">inactive</div>
						</div>

						<div class="profile-img">
							<img
								class="img-responsive"
								src="../images/<%= student.photo %> "
								alt=""
							/>
						</div>
						<div class="student-info mb-5 text-center">
							<h3 class="fw-bold"><%= student.name %></h3>
							<h5><%= student.department %></h5>
						</div>

						<div class="verify-email-phone">
							<a
								class="btn btn-primary"
								href="/student/emailsent/<%= student.id %> "
								>Email verification</a
							>
							<a
								class="btn btn-primary"
								href="/student/smssent/<%= student.id %>"
								>Phone verification</a
							>
						</div>
					</div>
				</div>

				<% }) %>

				<!-- item end -->
			</div>
		</div>
	</div>
	<!-- footer -->
	<div class="row justify-content-center mt-5 bg-gray">
		<hr />
		<div class="col-md-10 text-center">
			@ 2022 | Allrights Reserved by zoynul
		</div>
	</div>
</div>
