<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Student Listing</title>
		<!-- CSS only -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.1.1/css/all.min.css"
			integrity="sha512-ioRJH7yXnyX+7fXTQEKPULWkMn3CqMcapK0NNtCN8q//sW7ZeVFcbMJ9RvX99TwDg6P8rAH2IqUSt2TLab4Xmw=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
		<link rel="stylesheet" href="../assets/css/style.css" />
		<style>
			.profile-images img {
				max-width: 400px;
				width: 100%;
				height: 400px;
				object-fit: cover;
				border-radius: 50%;
			}
			.single-header {
				height: 500px;
				background-size: cover;
				background-position: center;
			}
			.uppercase {
				text-transform: uppercase;
			}
			@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap");
			body {
				font-family: "Roboto", sans-serif;
			}
			.header {
				background-color: #7432f9;
			}
			.verify i.fas {
				color: #496efd;
			}
			.newstdbtn i.fas {
				margin-right: 10px;
			}

			.newstdbtn {
				margin-right: 20px;
				padding: 10px 20px;
				text-transform: uppercase;
			}

			.unbtnstd {
				padding: 10px 20px;
				text-transform: uppercase;
			}

			.unbtnstd i.fas {
				margin-right: 10px;
			}
			.header-left h2 {
				text-transform: uppercase;
			}

			.header-left i.fas {
				margin-right: 15px;
			}
			.profile-img img {
				width: 100%;
			}
			.profile-img {
				width: 200px;
				height: 200px;
				margin: auto;
			}

			.profile-img img {
				position: relative;
				border-radius: 50%;
				width: 180px;
				height: 180px;
				object-fit: cover;
				/* border: 1px solid #7432F9; */
				box-shadow: 2px 2px 10px #7432f9;
			}

			.my-3.file-icons i.fas {
				font-size: 83px;
				cursor: pointer;
			}
			.opacity-zero-d {
				display: none;
			}
			.file-icons img {
				width: 100%;
			}
			.disable-div {
				position: relative;
				z-index: 2;
			}
			.poss {
				position: relative;
			}
			.disable-div:before {
				position: absolute;
				width: 100%;
				height: 100%;
				background: #fff;
				content: "";
				z-index: 2;
				opacity: 0.7;
				background-color: transparent;
			}
			.profile-images img {
				width: 100%;
			}
			.c-body-left ul {
				margin: 0;
				padding: 0;
				list-style: none;
			}

			.c-body-left li span {
				font-size: 18px;
				font-weight: 700;
				line-height: 37px;
			}
			.verify-email-phone {
				text-align: center;
				position: absolute;
				z-index: 3;
				bottom: 22px;
			}
			.un {
				position: relative;
				z-index: 33;
			}

			.unverify i.fas {
				color: red;
			}

			.status {
				text-transform: uppercase;
				color: red;
			}
			.prev_img {
				display: none;
			}
			.remove-btn {
				display: none;
			}
			img#preview_img {
				width: 300px;
				height: 300px;
				object-fit: cover;
				text-align: center;
				/* margin: auto; */
				/* display: flex; */
				/* justify-content: center; */
				/* align-items: center; */
				border-radius: 50%;
			}
			/* Mobile Layout */
			@media only screen and (max-width: 767px) {
				.header {
					display: block !important;
				}
				.header-right {
					text-align: center;
					margin: auto;
				}
				.newstdbtn {
					margin: 0px;
					margin-bottom: 10px;
				}
				.header-left {
					text-align: center;
					margin-bottom: 20px;
				}
			}
		</style>
	</head>
	<body>
		<%- body %>
		<!-- JavaScript Bundle with Popper -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
			crossorigin="anonymous"
		></script>
		<script>
			const deleteBtn = document.querySelectorAll(".delete-btn");
			const uploadPhoto = document.querySelector("#files");
			const preview_img = document.querySelector("#preview_img");
			const image_update = document.querySelector(".image_update");
			const fileimgage = document.querySelector("#fileimgage");
			const removebtn = document.querySelector(".remove-btn");
			const edpreview_img = document.querySelector("#edpreview_img");
			if (uploadPhoto) {
				uploadPhoto.onchange = (e) => {
					const imageLink = URL.createObjectURL(e.target.files[0]);
					preview_img.src = imageLink;
					if (uploadPhoto.files.length > 0) {
						preview_img.style.display = "block";
						image_update.innerHTML = "Uploaded successfully ðŸ˜Ž";
						image_update.style.color = "green";
						fileimgage.style.display = "none";
						removebtn.style.display = "block";
					}
				};
				removebtn.onclick = (e) => {
					e.preventDefault();
					fileimgage.style.display = "block";
					preview_img.src = " ";
					preview_img.style.display = "none";
					image_update.style.display = "none";
					removebtn.style.display = "none";
				};
			}

			if (deleteBtn.length > 0) {
				deleteBtn.forEach((item) => {
					item.onclick = (e) => {
						const conf = confirm("Are you sure you want to delete this item?");
						if (conf) {
							return true;
						} else {
							return false;
						}
					};
				});
			}
		</script>
	</body>
</html>
