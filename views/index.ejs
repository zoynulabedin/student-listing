<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-10">
			<!-- header -->
			<div class="header d-flex justify-content-between align-items-center p-3">
				<div class="header-left">
					<h2 class="text-white">
						<i class="fas fa-user-graduate"></i> Student App
					</h2>
				</div>
				<div class="header-right">
					<a class="btn btn-primary newstdbtn" href="/student/create"
						><i class="fas fa-plus"></i> Add New Student</a
					>
					<a
						class="btn btn-warning text-white unbtnstd"
						href="/student/unverify"
						><i class="fas fa-exclamation"></i> Unverify Student</a
					>
				</div>
			</div>
			<!-- header end -->
		</div>
	</div>
	<div class="row mt-3 justify-content-center">
		<div class="col-md-10">
			<div class="row">
				<% students.forEach( student => { %>
				<!-- item -->
				<div class="col-md-4">
					<div class="card shadow p-3">
						<div class="verify"><i class="fas fa-user-check"></i></div>
						<div class="profile-img">
							<img
								class="img-responsive"
								src="../images/<%= student.photo %> "
								alt=""
							/>
						</div>
						<div class="student-info text-center">
							<h3 class="fw-bold"><%= student.name %></h3>
							<h5><%= student.department %></h5>
						</div>
						<div class="buttons text-center">
							<a class="btn btn-primary" href="/student/view/<%= student.id %> "
								><i class="fas fa-eye"></i
							></a>
							<a
								class="btn btn-danger delete-btn"
								href="/student/delete/<%= student.id %>"
								><i class="fas fa-trash"></i
							></a>
						</div>
					</div>
				</div>
				<!-- item end -->
				<% }) %>
			</div>
		</div>
	</div>
	<!-- footer -->
	<div class="row justify-content-center mt-5 bg-gray">
		<hr />
		<div class="col-md-10 text-center">
			@ 2022 | Allrights Reserved by zoynul
		</div>
	</div>
</div>
