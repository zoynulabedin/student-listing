<div
	class="single-header d-flex align-items-center justify-content-center text-center"
	style="
		background-image: url('https://images.unsplash.com/photo-1623479322729-28b25c16b011?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');
	"
>
	<div class="header-content text-white text-center">
		<h1 class="uppercase"><%= name %></h1>
		<p>
			Lorem, ipsum dolor sit amet consectetur adipisicing elit. Ad illo iusto,
			dolor, cupiditate dolorum in voluptas aliquam vero officia incidunt
			accusantium est eaque ut libero reprehenderit, fugiat cumque? Velit, id.
		</p>
	</div>
</div>
<div class="container mt-5">
	<div class="row mt-3 justify-content-center">
		<div class="col-md-10">
			<div class="row d-flex justify-content-between">
				<!-- item -->
				<div class="col-md-6 text-center">
					<h3 class="text-uppercase">Profie Pic</h3>
					<div class="profile-images">
						<img src="../../images/<%= photo %>" alt="" />
					</div>
				</div>
				<div class="col-md-6 text-right">
					<div class="card">
						<div class="card-header d-flex justify-content-between">
							<div class="left-text">
								<h3>About Me</h3>
							</div>
							<div class="right-text">
								<a class="btn btn-primary" href="/"
									>Show All student <i class="fas fa-users-class"></i
								></a>
							</div>
						</div>
						<div class="card-body d-flex justify-content-between">
							<div class="c-body-left">
								<ul>
									<li><span>ID: <%= id %> </span></li>
									<li><span>Name: <%= name %> </span></li>
									<li><span>Email: <%= email %> </span></li>
									<li><span>Phone: <%= phone %> </span></li>
									<li><span>Department: <%= department %> </span></li>
								</ul>
							</div>
							<div class="c-body-right">
								<a class="btn btn-warning" href="/student/edit/<%= id %> "
									><i class="fas fa-edit text-white"></i
								></a>
							</div>
						</div>
						<div class="card-footer cf-social text-center">
							<a class="btn btn-info" href=""
								><i class="fab fa-facebook text-white"></i
							></a>
							<a class="btn btn-info" href=""
								><i class="fab fa-twitter text-white"></i
							></a>
							<a class="btn btn-info" href=""
								><i class="fab fa-linkedin text-white"></i
							></a>
							<a class="btn btn-info" href=""
								><i class="fab fa-instagram text-white"></i
							></a>
						</div>
					</div>
				</div>
				<!-- item end -->
			</div>
		</div>
	</div>
	<!-- footer -->
	<div class="row justify-content-center mt-5 bg-gray mb-5">
		<hr />
		<div class="col-md-10 text-center">
